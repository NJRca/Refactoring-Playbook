{
    "name": "refactoring-playbook",
    "version": "1.0.0",
    "description": "Portable refactoring standards across development tools",
    "main": "src/index.js",
    "scripts": {
        "prepare": "husky install",
        "lint": "eslint src/ --fix && prettier --write .",
        "typecheck": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "tsc",
        "dev": "ts-node src/index.ts",
        "analyze:deps": "madge --circular --extensions ts,js src/",
        "analyze:complexity": "plato -r -d reports src/"
    },
    "keywords": [
        "refactoring",
        "architecture",
        "clean-code",
        "standards"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@types/jest": "^29.5.0",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.0.0",
        "husky": "^9.1.6",
        "jest": "^29.0.0",
        "madge": "^6.0.0",
        "plato": "^1.7.0",
        "prettier": "^3.0.0",
        "ts-jest": "^29.0.0",
        "ts-node": "^10.0.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {},
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}
